{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "title": "分类名"
      },
      "translate": {
        "type": "object",
        "properties": {
          "zh-CN": {
            "type": "string",
            "title": "中文翻译"
          },
          "en-US": {
            "type": "string",
            "title": "英文翻译"
          }
        }
      },
      "hide": {
        "type": "boolean",
        "title": "是否隐藏"
      }
    },
    "required": [
      "name",
      "translate"
    ]
  }
}
